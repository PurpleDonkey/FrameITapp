#:kivy 2.3.0

# Welcome.kv

MDScreen:
    name: "welcome_screen"
    left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
    elevation: 10

    MDFloatLayout:
        md_bg_color: rgba(246, 250, 255, 255)

        MDFloatLayout:
            size_hint_y: .65
            pos_hint: {"center_y": .7}
            elevation: 6
            md_bg_color: 1, 1, 1, 1
            radius: [0, 0, 20, 20]

            MDIconButton:
                icon: "dots-vertical"
                pos_hint: {"center_x": .97, "center_y": .91}
                user_font_size: "20sp"
                theme_text_color: "Custom"
                text_color: rgba(26, 24, 58, 255)
                on_press: app.root.ids.nav_drawer.set_state("open")
            MDLabel:
                text: "My Profile"
                font_name: "BPoppins"
                font_size: "20sp"
                pos_hint: {"center_x": .56, "center_y": .82}
                color: rgba(71, 92, 119, 255)
            Image:
                id: profile_image
                source: "assets/anon.webp"
                pos_hint: {"center_x": .5, "center_y": .62}
                
            MDLabel:
                id: logged_in_user
                text: "{} {}".format(app.logged_in_first_name, app.logged_in_last_name)
                font_name: "BPoppins"
                pos_hint: {"center_y": .38}
                halign: "center"
                color: rgba(71, 92, 119, 255)
            MDIconButton:
                icon: "dots-vertical"
                pos_hint: {"center_x": .97, "center_y": .91}
                user_font_size: "20sp"
                theme_text_color: "Custom"
                text_color: rgba(26, 24, 58, 255)
                on_press: root.choose_profile_picture()
        
        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: 'vertical'
                ScrollView:
                    MDList:
                        OneLineListItem:
                            text: "Profile"
                            on_press: app.show_profile()
                        OneLineListItem:
                            text: "Gallery"
                            on_press: app.show_gallery()
                        OneLineListItem:
                            text: "Add Images"
                            on_press: app.show_add_images()
                        Widget: 
                            size_hint_y: None
                            height: "40dp"
                        OneLineListItem:
                            text: "Logout"
                            on_press: app.logout()
