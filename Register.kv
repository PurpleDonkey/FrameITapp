#:kivy 2.3.0

MDScreen:
    name: "register_screen"
    MDFloatLayout:
        md_bg_color: [1,1,1,1]
        
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login_screen"

        MDLabel:
            text: "Create a new account"
            font_name: "MPoppins"
            font_size: "18sp"
            pos_hint: {"center_x": .6, "center_y": .79}
            color: rgba(135, 135, 135, 255)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .63}
            TextInput:
                id: f_name
                hint_text: "First Name"
                font_name: "MPoppins"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1,1,1,0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                required: True
            
            TextInput:
                id: l_name
                hint_text: "Last Name"
                font_name: "MPoppins"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1,1,1,0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                required: True

        MDFloatLayout:
            pos_hint: {"center_x": .45, "center_y": 0}
            size_hint_y: .03
            md_bg_color: rgba(178, 178, 178, 255)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .53}
            TextInput:
                id: email
                hint_text: "Email"
                font_name: "MPoppins"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1,1,1,0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                required: True

        BoxLayout:
            orientation: 'horizontal'
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .43}
            TextInput:
                id: reg_user
                hint_text: "Username"
                font_name: "MPoppins"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1,1,1,0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                required: True

            TextInput:
                id: reg_pwd
                hint_text: "Password"
                font_name: "MPoppins"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1,1,1,0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                required: True

        MDFloatLayout:
            pos_hint: {"center_x": .45, "center_y": 0}
            size_hint_y: .03
            md_bg_color: rgba(178, 178, 178, 255)

        MDFloatLayout:
            pos_hint: {"center_x": .45, "center_y": 0}
            size_hint_y: .03
            md_bg_color: rgba(178, 178, 178, 255)

        Button:
            text: "REGISTER"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .34}
            background_color: 0,0,0,0
            font_name: "BPoppins"
            on_press: app.register()
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)

                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        MDLabel:
            text: "or"
            pos_hint: {"center_y": .22}
            color: rgba(52, 0, 231, 255)
            font_size: "13sp"
            font_name: "BPoppins"
            halign: "center"

        MDFloatLayout:
            md_bg_color: rgba(178, 178, 178, 255)
            size_hint: .3, .002
            pos_hint: {"center_x": .3, "center_y": .218}
        
        MDFloatLayout:
            md_bg_color: rgba(178, 178, 178, 255)
            size_hint: .3, .002
            pos_hint: {"center_x": .7, "center_y": .218}

        MDLabel:
            text: "Alternate Login"
            pos_hint: {"center_y": .16}
            color: rgba(135, 133, 193, 255)
            font_size: "13sp"
            font_name: "BPoppins"
            halign: "center"

        MDGridLayout:
            cols: 3
            size_hint: .48, .07
            pos_hint: {"center_x": .5, "center_y": .1}
            Image:
                source: "assets/google.png"
            Image:
                source: "assets/facebook.png"
            Image:
                source: "assets/instagram.png"

        MDLabel:
            text: "Already have an account?"
            pos_hint: {"center_x": .68, "center_y": .04}
            color: rgba(135, 133, 193, 255)
            font_size: "11sp"
            font_name: "BPoppins"

        MDTextButton:
            text: "Sign in"
            pos_hint: {"center_x": .75, "center_y": .04}
            color: rgba(135, 133, 193, 255)
            font_size: "11sp"
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login_screen"
    
